<!DOCTYPE HTML>
<html>
	<head>
		<title>Accueil</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
		<link rel="stylesheet" href="css/main_home.css" />
        <script src="https://kit.fontawesome.com/d28dcfa7e3.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="css/style_form_sign.css">
		<link rel="stylesheet" href="css/main_setting.css">
		<link rel="stylesheet" href="css/uikit.min.css" />
		<script src="js/uikit.min.js"></script>
		<script src="js/uikit-icons.min.js"></script>
	</head>
	<body class="is-preload">

		<div id="header">

			<div class="top">

				<!-- Logo -->
					<div id="logo">
						<span class="image avatar48"><i class="far fa-user"></i></span>
						<h1 id="title"><%= name +" "+surname%></h1>
						<p><%= role %></p>
					</div>

				<!-- Nav -->
				<nav id="nav">
					<ul>
			
						<form action="/" method="POST" id="form_home">
							<li><a href="#home" id="top-link" onclick="document.getElementById('form_home').submit()"><span class="icon solid fa-home">Accueil</span></a></li>
						</form>
						<% if(role == "Livreur"){ %>
							<form action="/map" method="POST" id="form_map">
								<li><a href="#map" id="map-link" onclick="document.getElementById('form_map').submit()"><span class="icon solid fa-th">Ma carte</span></a></li>
							</form>
						<%}else{%>
							<form action="/commandes" method="POST" id="form_map">
								<li><a href="#commandes" id="commandes-link" onclick="document.getElementById('form_map').submit()"><span class="icon solid fa-th">Mes commandes</span></a></li>
							</form>
						<%} %>
						<% if(role == "Commercant"){ %>
							<form action="/qrViewer" method="GET" id="form_qrcode">
								<li><a href="#qrViewer" id="qrcode-link" onclick="document.getElementById('form_qrcode').submit()"><span class="icon solid fa-qrcode">Scanner un QRcode</span></a></li>
							</form>
						<%}%>
						<form action="/setting" method="GET" id="form_setting">
							<li><a href="#setting" id="setting-link" onclick="document.getElementById('form_setting').submit()"><span class="icon solid fa-user">Parametres</span></a></li>
						</form>
						<form action="/disconnect" method="POST" id="form_disconnect">
							<li><a href="#disconnect" id="disconnect-link" onclick="document.getElementById('form_disconnect').submit()"><span class="icon solid fa-door-open">Sortie</span></a></li>
						</form>
					</ul>
				</nav>

			</div>



		</div>


		<!-- Main -->
			<div id="main">
                <div class="container">
                    <img src="img/logo_mady_small.svg" class="logo">
                    <div class="container-form">
						<form action="" method="POST">
                        <div class="line">
							<div class="container_form">
								<label for="surname">Prénom</label>
								<input type="text" name="surname" value=<%= surname %> required>
							</div>
							<div class="container_form">
								<label for="name">Nom</label>
								<input type="text" name="name" value=<%= name %> required>
							</div>
						</div>
						<div class="line">
							<div class="container_form">
								<label for="mail">Mail</label>
								<input type="mail" name="mail" value=<%= mail %> required>
							</div>
							<div class="container_form">
								<label for="phone">Téléphone</label>
								<input type="phone" name="phone" required value=<%= phone %> >
							</div>
						</div>

						<% if(role !=  "Producteur" && role != "Commercant"){ %>
						<div class="line">
							<div class="container_form">
								<label for="mail">Rayon</label>
								<select class="select" name="distance" required>
									<% if(distance == 1){ %>
										<option value="1" selected>1 Km</option>
										<option value="5" >5 Km</option>
										<option value="10">10 Km</option>
										<option value="1000">+10 Km</option>
									<% }else if(distance == 5){ %>
										<option value="1" >1 Km</option>
										<option value="5" selected>5 Km</option>
										<option value="10">10 Km</option>
										<option value="1000">+10 Km</option>
									<% }else if(distance == 10){ %>
										<option value="1" >1 Km</option>
										<option value="5" >5 Km</option>
										<option value="10" selected>10 Km</option>
										<option value="1000">+10 Km</option>
									<% }else if(distance > 10){ %>
										<option value="1" >1 Km</option>
										<option value="5" >5 Km</option>
										<option value="10" >10 Km</option>
										<option value="1000" selected>+10 Km</option>
									<% } %>
								</select>
							</div>

							<div class="container_form">
								<label for="mail">Locomotion</label>
								<select class="select" name="vehicule" required>

									<% console.log(vehicule); if(vehicule == 1){ %>
										<option value="Velo" selected>Vélo</option>
										<option value="Moto">Moto</option>
										<option value="Voiture">Voiture</option>
										<option value="Camion">Camion</option>
									<% }else if(vehicule == 2){ %>
										<option value="Velo">Vélo</option>
										<option value="Moto" selected>Moto</option>
										<option value="Voiture">Voiture</option>
										<option value="Camion">Camion</option>
									<% }else if(vehicule == 3){ %>
										<option value="Velo">Vélo</option>
										<option value="Moto">Moto</option>
										<option value="Voiture" selected>Voiture</option>
										<option value="Camion">Camion</option>
									<% }else if(vehicule == 4){ %>
										<option value="Velo">Vélo</option>
										<option value="Moto">Moto</option>
										<option value="Voiture">Voiture</option>
										<option value="Camion" selected>Camion</option>
									<% } %>

								</select>
							</div>
						</div>
						<%} %>

                        <div class="">
                            <div class="container_form">
                                <input type="submit" class="submit" value="Valider">
							</div>

						</div>
					</form>
					<div class="label" id="alert">
							<p><%= error %></p>                                              <!-- error message -->
					</div>
						<a href="#modal-password" uk-toggle class="pws_link">Changer de mot de passe</a>
						<br>
						<a href="#modal-remove" uk-toggle class="pws_link">Supprimer le compte<a>
                    </div>
                </div>
			</div>

			<div id="modal-password" uk-modal>
				<div class="uk-modal-dialog uk-modal-body">
					<form action="" method="POST">
						<h2 class="uk-modal-title">Changer votre mot de passe</h2>
						<p>Mot de passe: </p>
						<input type="password" name="pws" required>
						<p>Retaper le mot de passe: </p>
						<input type="password" name="repws" required>
						<p>Nouveau Mot de passe: </p>
						<input type="password" name="new_pws" required>
						<p class="uk-text-right">

						<input type="submit" class="uk-button uk-button-default" value="Changer de mot de passe">

						</p>
					</form>
				</div>
			</div>
			<div id="modal-remove" uk-modal>
				<div class="uk-modal-dialog uk-modal-body">
					<form action="/remove" method="POST">
						<h2 class="uk-modal-title">Suppression de votre compte ?</h2>
						<p>Vous voulez vous vraiment supprimer votre compte ?</p>
						<p class="uk-text-right">

						<input type="submit" class="uk-button uk-button-default" value="Supprimer le compte">

						</p>
					</form>
				</div>
			</div>

		<!-- Scripts -->
			<script src="js/jquery.min.js"></script>
			<script src="js/jquery.scrolly.min.js"></script>
			<script src="js/jquery.scrollex.min.js"></script>
			<script src="js/browser.min.js"></script>
			<script src="js/breakpoints.min.js"></script>
			<script src="js/util_home.js"></script>
			<script src="js/main_home.js"></script>

	</body>
</html>
